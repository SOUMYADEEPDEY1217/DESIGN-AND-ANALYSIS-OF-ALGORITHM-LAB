#include <stdio.h>
#include <stdlib.h>
#include <time.h>
void insertionSort(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}
void swap(int* a, int* b) {
    int t = *a;
    *a = *b;
    *b = t;
}
int partition(int arr[], int low, int high) {
    int pivot = arr[high];
    int i = (low - 1);
    for (int j = low; j <= high - 1; j++) {
        if (arr[j] < pivot) {
            i++;
            swap(&arr[i], &arr[j]);
        }
    }
    swap(&arr[i + 1], &arr[high]);
    return (i + 1);
}
void quicksort(int arr[], int low, int high) {
    if (low < high) {
        int pi = partition(arr, low, high);
        quicksort(arr, low, pi - 1);
        quicksort(arr, pi + 1, high);
    }
}
int binarySearch(int arr[], int low, int high, int x) {
    if (high >= low) {
        int mid = low + (high - low) / 2;
        if (arr[mid] == x)
            return mid;
        if (arr[mid] > x)
            return binarySearch(arr, low, mid - 1, x);
        return binarySearch(arr, mid + 1, high, x);
    }
    return -1;
}
void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        printf("%d ", arr[i]);
    printf("\n");
}
int main() {
    int n;
    printf("Enter the size of the arrays: ");
    scanf("%d", &n);
    int reversedArr[n];
    int randomArr[n];
    for (int i = 0; i < n; i++) {
        reversedArr[i] = n - i;
    }
    srand(time(0));
    for (int i = 0; i < n; i++) {
        randomArr[i] = rand() % 100; 
    }
    printf("Original reversed array: ");
    printArray(reversedArr, n);
    printf("Original random array: ");
    printArray(randomArr, n);
    insertionSort(reversedArr, n);
    printf("Sorted reversed array (using insertion sort): ");
    printArray(reversedArr, n);
    quicksort(randomArr, 0, n - 1);
    printf("Sorted random array (using quicksort): ");
    printArray(randomArr, n);
    int searchElement;
    printf("Enter an element to search in the sorted reversed array: ");
    scanf("%d", &searchElement);
    int result1 = binarySearch(reversedArr, 0, n - 1, searchElement);
    if (result1 != -1)
        printf("Element found at index %d in reversed array\n", result1);
    else
        printf("Element not found in reversed array\n");

    printf("Enter an element to search in the sorted random array: ");
    scanf("%d", &searchElement);
    int result2 = binarySearch(randomArr, 0, n - 1, searchElement);
    if (result2 != -1)
        printf("Element found at index %d in random array\n", result2);
    else
        printf("Element not found in random array\n");
    return 0;
}
