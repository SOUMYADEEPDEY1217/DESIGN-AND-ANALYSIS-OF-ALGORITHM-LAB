#include <stdio.h>
int main() 
{
    int n, i, j, temp;
    int arr[50];
    int flag;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    for (i = 0; i < n - 1; i++) {
        flag = 0;
        printf("\nPass %d:\n", i + 1);
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;

                printf("Step %d: Found (swap %d and %d)\n",
                       j + 1, arr[j], arr[j + 1]);
                flag = 1;
            } else {
                printf("Step %d: Not Found (no swap)\n", j + 1);
            }
        }
        if (flag == 0) {
            printf("No swaps found. Array is already sorted.\n");
            break;
        }
    }
    printf("\nSorted array:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    return 0;
}

